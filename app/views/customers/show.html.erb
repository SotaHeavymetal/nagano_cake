<divclass = "container my-5">
  <divclass = "row">
    <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
  </div>

  <divclass = "row mt-3">
    <divclass = "offset-sm-1 col-sm-7">
      <tableclass = "table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %>
                </div>
              <% end %>
            </div>
            </td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <divclass = "col-sm-3 my-auto">
      <%=link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
      <%=link_to "注文履歴一覧を見る", admin_customer_orders_path, class: "btn btn-primary mt-5" %>
    </div>
  </div>
</div>
