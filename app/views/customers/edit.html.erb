<div class = "container my-5">
  <div class = "row">
    <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
  </div>

  <%= form_with model:@customer, url: admin_customers_path, local:true do |f| %>

    <%= f.label :会員ID %>
    <%= f.label @customer.id %>

    <%= f.label :氏名 %>
    <%= f.text_field :last_name %><%= f.text_field :first_name %>

    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>

    <%= f.label :住所 %>
    <%= f.text_field :address %>

    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>

    <%= f.submit "変更を保存", class: "btn btn-success" %>
</div>
<% end %>
</div>