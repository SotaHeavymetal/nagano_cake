<div class ="container md-5">
 <div class = "row">
  <div class = "offset-1">
   <h3>注文履歴詳細</h3>
  </div>
 </div>

<div class = "row">
  <div class = "col-7">
    <table class = "tabel-borderless">
      <tr>
        <td><strong>購入者</strong></td>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <td><strong>注文日</strong></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td><strong>配送先</strong></td>
        <td><%= "〒" + @order.postal_code + " " + @order.address + " " + @order.name %></td>
      </tr>
      <tr>
        <td><strong>支払方法</strong></td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
    </table>
  </div>
</div>

    <div class ="row">
     <div class = "col-8">
        <table class="table" border = "1">
         <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
         </thead>

         <tbody>
           <% @order.orders_details.each do |detail| %>
          <tr>
           <td><%= detail.item.name %></td>
           <td><%= (detail.price * 1.1).floor %></td>
            <td><%= detail.amount %></td>
           <td><%= (detail.price * 1.1).floor * detail.amount %></td>
          </tr>
         </tbody>
        <% end %>
       </table>
      </div>

      <div class = "col-4">
        <table class = "table borderless">
          <tr>
         <td><strong>商品合計</strong></td>
         <td><%= @order.total_payment - 800 %>円</td>
         </tr>
          <tr>
            <td><strong>送料</strong></td>
            <td><%= @order.shipping_cost %>円</td>
          </tr>
         <tr>
           <td><strong>請求金額合計</strong></td>
           <td><strong><%= @order.total_payment %>円</strong></td>
         </tr>
        </div>
       </table>
      </div>
     </div>

</div>