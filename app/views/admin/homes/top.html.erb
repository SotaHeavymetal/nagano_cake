<div class = "container my-5">
  <div class = "row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class = "row mt-3">
    <div class = "offset-sm-1 col-sm-10">
      <table class = "table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_path(order) %></td>
          <td><%= order.name %></td>
          <td>
            <% sum = 0 %>
          <% order.orders_details.each do |detail| %>
          <% sum += detail.amount %>
          <% end %>
          <%= sum %>
          <%#= order.sum_amount %>
          </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      </div>

    <div class = "row">
      <div class = "col-4 text-center">
        <%= paginate @orders %>
      </div>
    </div>
    </div>
