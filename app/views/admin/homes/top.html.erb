<div class = "container my-5">
  <div class = "row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class = "row md-3">
    <div>
      <table class = "table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>
          <td><%= link_to order.created_at, admin_orders_path(order) %></td>
          <td><%= order.name %></td>
          <td>
          <% order.orders_details.each do |detail| %>
          <span><%= detail.sum(:amount) %></span>
          </tr>
          <% end %>
          </td>
          <% end %>
          </tbody>
        </table>
      </div>
      </div>

    <div class = "row">
      <div class = "col-4 text-center">
        <%#= paginate @order %>
      </div>
    </div>
    </div>
