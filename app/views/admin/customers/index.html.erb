<div class = "container my-5">
  <div class = "row">
    <h2>会員一覧</h2>
  </div>

  <div class = "row mt-3">
    <div class = "offset-sm-1 col-sm-10">
      <table class = "table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_valid == true %>
              <div class = "text-success">有効</div>
              <% else %>
              <div class = "text-muted">退会</div>
              <% end %>
              </td>
              </tr>
          <% end %>
         </tbody>
      </table>
    </div>
      <%= paginate @customers %>
  </div>
</div>