<div class = "container">
  <div class = "row">
   <h2>商品編集</h2>
  </div>

  <div class = "row mt-3">
   <dic class = "offset-3">
    <table class = "table-borderless">
     <%= form_with model:@item, url: admin_item_path, method: :patch, local:true do |f| %>
     <tr>
      <td><%= f.label :商品画像 %></td>
      <td><%= f.attachment_field :image %></td>
     </tr>
     <tr>
      <td><%= f.label :商品名 %></td>
      <td><%= f.text_field :name %></td>
     </tr>
     <tr>
      <td><%= f.label :商品説明 %></td>
      <td><%= f.text_area :introduction %></td>
     </tr>
     <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
     </tr>
     <tr>
      <td><%= f.label :税抜価格 %></td>
      <td><%= f.text_field :price %></td>
     </tr>
     <tr>
      <td><%= f.label :販売ステータス %></td>
      <td class="select_field">
						<%= f.radio_button :is_active, true %>
						<%= f.label :is_active, "販売中", class: "text-active" %>
						<%= f.radio_button :is_active, false %>
						<%= f.label :is_active, "販売停止中", class: "text-invalid" %>
					</td>
     </tr>
    </table>
   </div>
  </div>

  <div class = "row mt-3">
   <dic class = "offset-3">
    <%= f.submit :変更を保存, class:"btn btn-success" %>
      <% end %>
      </div>
      </div>
      </div>

