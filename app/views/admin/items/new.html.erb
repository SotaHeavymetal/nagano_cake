<div class = "container">
 <div class = "row">
  <h2>商品新規登録</h2>
 </div>

 <div class = "row mt-3">
  <div class = "offset-3">
   <table class = "table-borderless">
    <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
     <tr>
      <td><%= f.label :商品画像 %></td>
      <td><%= f.attachment_field :image %></td>
     </tr>
     <tr>
      <td><%= f.label :商品名 %></td>
      <td><%= f.text_field :name %></td>
     </tr>
     <tr>
      <td><%= f.label :商品説明 %></td>
      <td><%= f.text_area :introduction %></td>
     </tr>
     <tr>
      <td><%= f.label :ジャンル %></td>
      <td class = "select_field" ><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
     </tr>
     <tr>
      <td><%= f.label :税抜価格 %></td>
      <td><%= f.number_field :price %></td>
     </tr>
     <tr>
      <td><%= f.label :sales_status, "販売ステータス" %></td>
					<td class="select_field">
						<%= f.radio_button :is_active, true %>
						<%= f.label :is_active, "販売中", class: "text-active" %>
						<%= f.radio_button :is_active, false %>
						<%= f.label :is_active, "販売停止中", class: "text-invalid" %>
					</td>
     </tr>
    </table>

     <div class = "row flex aligncenter p15">
      <%= f.submit :新規登録, class: "btn btn-success" %>
      <% end %>
     </div>
    </div>
   </div>
</div>