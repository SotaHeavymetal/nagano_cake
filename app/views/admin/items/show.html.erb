<h2>商品詳細</h2>

<%= attachment_image_tag @item, :image_id, :fill, 200, 200, fallback: 'no_image.jpeg' %>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>

      <td>商品説明</td>
      <td><%= @item.introduction %></td>

      <td>税込価格（税抜価格）</td>
      <td><%= @item.price %>(<%= (@item.price *1.1).floor %>)円</td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>
