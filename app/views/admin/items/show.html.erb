<div class = "container my-5">
 <div class = "row">

 <h2>商品詳細</h2>
 </div>

<div class = "row mt-3">
 <div class = "offset-sm-1 col-sm-3">
 <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpeg' %>
  </div>
  <div class = "col-sm-4">
<table class = "table">
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td></tr>

      <tr><td>商品説明</td>
      <td><%= @item.introduction %></td></tr>
      
      <tr><td>税込価格（税抜価格）</td>
      <td><%= @item.price %>円</td></tr>
    
  </tbody>
</table>
</div>
</div>

<div class = "row">
  <!--<div clas = "offset-sm-9 col-sm-2">-->
<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
<!--</div>-->
</div>
</div>

