<div class = container my-5>
  <div class = "row">
    <%= @items.each do |item| %>
    <div class = "offset-sm-1 col-sm-3">
      <%= link_to item_path(item) do %>
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpeg' %>
      <% end %>
      <div><%= item.name %></div>
      <div><%= item.price %></div>
      <% end %>
    </div>
  </div>

  <div class = "container">
    <div class = "row">
      <div class = "col-mt-3 offset-mt-3">
        <%= paginate @items_page %>
      </div>
    </div>
  </div>
</div>