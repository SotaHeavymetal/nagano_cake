<h2>新規会員登録</h2>

<div class = "row mt-3">
  <div class = "offset-4 col-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <td>
<div>
  <th><%= f.label :名前 %></th>
  <%= f.text_field :last_name, placeholder:"令和" %>
  <%= f.text_field :first_name, placeholder:"道子" %>
</div>
<div>
<%= f.text_field :last_name_kana, placeholder:"レイワ" %>
<%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
</div>

</div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<div>
  <%= f.label :郵便番号 %>
  <%= f.text_field :postal_code, placeholder:"0000000" %>
</div>

<div>
  <%= f.label :住所 %>
  <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %>
</div>
<div>
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number, placeholder:"0000000000" %>
</div>

  <div class="field">
    <%#= f.label :パスワード(６文字以上) %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</td>
</table>

<h2>既に登録済みの方</h2>
<div><h3>
  <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
</h3></div>
