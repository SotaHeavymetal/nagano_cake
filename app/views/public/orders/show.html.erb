<div class = "container">
 <div class = "row">
  <div class = "offset-1">
   <h2>注文履歴詳細</h2>
  </div>
 </div>

  <div class = "row">
   <div class = "col-6">
    <div class = "row">
     <strong>注文情報</strong>
    </div>

     <div class = "row">
      <table class="table offset-1" border = "1">
       <tbody>
        <tr>
         <td>注文日</td>
         <td><%= @order.created_at %></td>
        </tr>
        <tr>
         <td>配送先</td>
         <td>
          <%= "〒" + @order.postal_code + "  " + @order.address + "  " + @order.name %>
         </td>
        </tr>
        <tr>
         <td>支払方法</td>
         <td><%= @order.payment_method %></td>
        </tr>
       </tbody>
      </table>
     </div>
    </div>

     <div class = "row">
      <div class = "col-4">
       <strong>請求情報</strong>
      </div>

       <div class = "row">
        <table class = "table" border = "1">
         <tbody>
          <tr>
           <td>商品合計</td>
           <td><%= @order.total %></td>
          </tr>
          <tr>
           <td>配送料</td>
           <td><%= @order.shipping_cost %></td>
           </tr>
            <tr>
             <td>ご請求額</td>
             <td><%= @order.total + @order.shipping_cost %></td>
            </tr>
           </tbody>
          </table>
         </div>
        </div>
       </div>

       <div class="row">
        <div class="offset-1">
         <strong>注文内容</strong>
        </div>
       </div>

       <div class="row">
        <table class="table" border = "1">
         <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
         </thead>

         <% @order_details.each do |detail| %>
         <tbody>
          <tr>
           <td><%= detail.item_name %></td>
           <td><%= (detail.item_price * 1.1).floor %></td>
           <td><%= detail.amount %></td>
           <td><%= detail.item_price * detail.amount %></td>
          </tr>
         </tbody>
        <% end %>
       </table>
      </div>
     </div>
    </div>