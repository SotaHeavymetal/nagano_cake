<div class = container>
<div class = "row">
 <div class = "offset-1">
  <h3>注文履歴</h3>
 </div>
</div>

<div class = "row">
 <table class = table border = 1 >
  <thead>
   <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
   </tr>
  </thead>

 <tbody>
  <% @orders.each do |order| %>
  <tr>
   <td><%= order.created_at %></td>
   <td><%= "〒" + order.postal_code + " " + order.address + " " + order.name %></td>
   <td>
 <% order.orders_details.each do |detail| %>
 <span><%= detail.item.name %></span></br>
   <% end %>
   </td>
   <td><%= order.total_payment %></td>
   <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
  </tr>
  <% end %>
 </tbody>
 </table>
</div>