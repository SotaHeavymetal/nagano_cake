<div class = "container my-5">
  <div class = "row">
   <h2>ログイン</h2>
   <h5>会員の方はこちらからログイン</h5>
  </div><%= flash[:error] %>

   <div class = "row mt-3">
    <div class = "offset-sm-1 col-sm-10">
      <table class = "table table-borderless">
       <tbody>
        <%= form_with model: resource, url: new_customer_session_path, local: true do |f| %>

         <tr><div class="field">
          <td><%= f.label :メールアドレス %><br /></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
         </div></tr>

         <tr><div class="field">
          <td><%= f.label :パスワード %><br /></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
         </div></tr>

          <td><div class="actions">
           <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div></td>
        <% end %>

         <%= render "devise/shared/links" %>
         </tbody>
       </table>
       </div>
      </div>

      <h5>会員登録がお済みでない方</h5>
       <div><h5>
        <%= link_to "こちら", new_customer_registration_path %>から新規登録を行なってください。
       </5></div>
</div>