<h5>配送先登録/一覧</h5>

<div class = "row md-5">
   <div class = "offset-sm-2">
<table class = "table" border = "0">
<tbody>
<%= form_with model:@address, url: addresses_path, method: :post do |f| %>
<tr>
<td><%= f.label :郵便番号（ハイフンなし） %></td>
<td><%= f.text_field :postal_code %></td>
</tr>
<tr>
<td><%= f.label :住所 %></td>
<td><%= f.text_field :address %></td>
</tr>
<tr>
<td><%= f.label :宛名 %></td>
<td><%= f.text_field :name %></td>
</tr>

<td>
 <div class="actions">
  <%= f.submit :新規登録, class: "btn btn-success" %>
 </div>
</td>
<% end %>
</tbody>
</table>
</div>
</div>

<div class = "offset-1">
  <table class = "table" border = "１">
   <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
     </tr>
     </thead>

   <tbody>
    <% @addresses.each do |address| %>
     <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %></td>
      <td><%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %></td>
     </tr>
     <% end %>
     </tbody>
     </table>
     </div>


