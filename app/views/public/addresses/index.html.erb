<h5>配送先登録/一覧</h5>

<%= form_with model:@item, url: addresses_path, local:true do |f| %>
<%= f.label :郵便番号（ハイフンなし） %>
<%= f.text_field :postal_code %>

<%= f.label :住所 %>
<%= f.text_field :address %>

<%= f.label :宛名 %>
<%= f.text_area :introduction %>

<%= f.label :税抜価格 %>
<%= f.text_field :price %>

<%= f.submit :新規登録, class: "btn btn-success" %>
<% end %>
