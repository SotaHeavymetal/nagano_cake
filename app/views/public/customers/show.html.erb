<div class = "container my-5">
  <div class = "row">
   <div class = "offset-sm-1">
     <h2>マイページ</h2>
   </div>

<div class ="row my-3">
  <div class = "offset-sm-1">
    <strong>登録情報</strong>
  </div>
</div>

  <div class = "row my-5">
   <div class = "offset-sm-2">
    <table class = "table" border = "1">
     <tbody>
      <%= form_with model:@customer, url: admin_customers_path, method: :get, local:true do |f| %>
       <tr>
        <td><%= f.label :氏名 %></td>
        <td><%= @customer.first_name + @customer.last_name %></td>
       </tr>
       <tr>
        <td><%= f.label :カナ %></td>
        <td><%=f.label @customer.first_name_kana + @customer.last_name_kana %></td>
       </tr>
       <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.label @customer.postal_code %></td>
       </tr>
       <tr>
        <td><%= f.label :住所 %></td>
        <td><%= @customer.address %></td>
       </tr>
       <tr>
        <td><%= f.label :電話番号 %></td>
        <td><%= @customer.telephone_number %></td>
       </tr>
       <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= @customer.email %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
  
    <div class = "row">
      <div class = "offset-sm-3">
     <%= link_to "編集する", customers_edit_path(@customer), class: "btn btn-success" %>
    </div>
    </div>

    <div class = "offset-sm-3">
     <div class = "row">
      <h5>配送先</h5>
       <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      <h5>注文履歴</h5>
       <%= link_to "一覧を見る",orders_path, class: "btn btn-primary" %>
     </div>
    </div>
 </div>
</div>
